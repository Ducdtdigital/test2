                    {/if}
                    <div class="promotion">{$goods.seller_note}</div>
                    {$goods.desc_short}
                </figure>
                {elseif $goods.name_leng }
                <figure class="bginfo">
   
                    <span class="name">{$goods.name}</span>
                    <div class="rank_click clearfix">
                         <em class="rank rank_{$goods.comment_rank}"></em><em>{$goods.comment_count} đánh giá</em>
                    </div> 
                    {if $goods.price eq 0}
